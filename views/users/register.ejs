<%- include('../partials/head') %> 
<%- include('../partials/navbar') %>
<div class="container mt-3">
<%- include('../partials/flash') %> 
</div>

<!--REGISTER CARD FORM-->
<div class="d-flex justify-content-center align-items-center mb-3">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card shadow register-card">
        <img src="https://images.unsplash.com/photo-1570976076581-db50a9a3246f?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1374&q=80" alt="Register header image" class="card-img-top">
        <div class="card-body"> <!--register card body-->
          <h5 class="card-title text-center py-3">Register</h5>
          <form action="/register" method="POST" class="validated-form" novalidate>
            <div class="mb-3 py-2">
              <label class="form-label" for="username">Username</label>
              <input class="form-control" type="text" id="username" name="username" autofocus required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="mb-3 py-2">
              <label class="form-label" for="email">Email</label>
              <input class="form-control" type="text" id="password" name="email" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="mb-3 py-2">
              <label class="form-label" for="password">Password</label>
              <input class="form-control" type="password" id="password" name="password" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="py-2">
              <button class="btn btn-primary mt-3 col-12">Register</button> 
            </div>
         </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/cookieConsent') %> 
<%- include('../partials/scripts') %> 
<%- include('../partials/footer') %> 
</main> 
</body>
</html>























