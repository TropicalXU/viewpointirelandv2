<%- include('../partials/head') %> 
<%- include('../partials/navbar') %>
<div class="container mt-3">
<%- include('../partials/flash') %> 
</div>

<!--EDIT PAGE HEADER-->
<div class="container location-header-edit mt-3 mb-5 mx-auto">
    <h1 style="color:white;font-size: 80px;" class="text-center py-5" id="signature">Edit Location</h1>
</div>

<!--EDIT CARD POST FORM--> <!--EJS USED TO REFERENCE LOCATION MODEL-->
<div class="row pt-3">
    <div class="col-md-6 offset-md-3 edit-section card-custom mb-2 p-5" style="border: none;">
        <form action="/locations/<%=location._id%>?_method=PUT" method="POST" novalidate class="validated-form"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="location[title]"
                    value="<%=location.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="location[location]"
                    value="<%=location.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea rows="4" class="form-control" type="text" id="description" name="location[description]"
                    required><%= location.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="py-2" for="">Upload Images</label>

                <label for="image" class="form-label"></label>
               
                <input class="form-control" type="file" id="image" name="image" multiple>
              
            </div>
            <div class="mb-3">
                <h5> Delete Images </h5>
                <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
                    <% location.images.forEach(function(img, i) { %> <!--looping over each image to get image index if item is selected-->
                    <div class="col">
                        <div class="card">
                            <img class="img-thumbnail" src="<%=img.url%>" alt="Location image thumbnail">
                            <div class="card-img-overlay text-end pt-1 pe-2">
                                <label class="visually-hidden" for="image-<%=img.thumbnail%>">Delete Image</label>
                                <input class="form-check-input" type="checkbox" name="deleteImages[]" value="<%=img.filename%>"  id="image-<%= i %>">
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-info col-12">Update Location</button>
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-center my-5">
    <a class="btn btn-gradient" href="/locations/<%= location._id%>"><i class="fa-solid fa-chevron-left px-2"></i>Back To Location</a>
</div>

<%- include('../partials/cookieConsent') %>
<%- include('../partials/scripts') %> 
<%- include('../partials/footer') %> 
</main> 
</body>
</html>
